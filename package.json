{
  "name": "vscode-siyuan-fs",
  "displayName": "Siyuan Note File System",
  "description": "A VSCode extension that maps Siyuan Note instances as virtual file systems",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Notebooks"
  ],
  "keywords": [
    "siyuan",
    "note",
    "filesystem",
    "virtual"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "siyuan.refresh",
        "title": "Siyuan: Refresh File System",
        "icon": "$(refresh)"
      },
      {
        "command": "siyuan.addInstance",
        "title": "Siyuan: Add Instance",
        "icon": "$(add)"
      },
      {
        "command": "siyuan.removeInstance",
        "title": "Siyuan: Remove Instance",
        "icon": "$(remove)"
      },
      {
        "command": "siyuan.editInstance",
        "title": "Siyuan: Edit Instance",
        "icon": "$(edit)"
      },
      {
        "command": "siyuan.enableInstance",
        "title": "Siyuan: Enable Instance",
        "icon": "$(check)"
      },
      {
        "command": "siyuan.disableInstance",
        "title": "Siyuan: Disable Instance",
        "icon": "$(x)"
      },
      {
        "command": "siyuan.testConnection",
        "title": "Siyuan: Test Connection",
        "icon": "$(testing-passed-icon)"
      },
      {
        "command": "siyuan.loadFileSystem",
        "title": "Siyuan: Load to File Tree",
        "icon": "$(file-directory)"
      },
      {
        "command": "siyuan.unloadFileSystem",
        "title": "Siyuan: Unload from File Tree",
        "icon": "$(close)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "siyuan",
          "name": "Siyuan Notes",
          "icon": "$(book)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "siyuan",
        "contents": "No Siyuan instances configured.\n[Add Instance](command:siyuan.addInstance)"
      },
      {
        "view": "siyuan",
        "contents": "Click the + button to add your first Siyuan Note instance.",
        "when": "!siyuan:hasInstances"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "siyuan.addInstance",
          "when": "view == siyuan",
          "group": "navigation"
        },
        {
          "command": "siyuan.refresh",
          "when": "view == siyuan",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "siyuan.loadFileSystem",
          "when": "view == siyuan && viewItem == instance && !siyuan:instance:loaded",
          "group": "inline"
        },
        {
          "command": "siyuan.unloadFileSystem",
          "when": "view == siyuan && viewItem == instance && siyuan:instance:loaded",
          "group": "inline"
        },
        {
          "command": "siyuan.testConnection",
          "when": "view == siyuan && viewItem == instance",
          "group": "1_testing"
        },
        {
          "command": "siyuan.editInstance",
          "when": "view == siyuan && viewItem == instance",
          "group": "2_modify"
        },
        {
          "command": "siyuan.enableInstance",
          "when": "view == siyuan && viewItem == instance && !siyuan:instance:enabled",
          "group": "3_toggle"
        },
        {
          "command": "siyuan.disableInstance",
          "when": "view == siyuan && viewItem == instance && siyuan:instance:enabled",
          "group": "3_toggle"
        },
        {
          "command": "siyuan.removeInstance",
          "when": "view == siyuan && viewItem == instance",
          "group": "4_delete"
        }
      ]
    },
    "configuration": {
      "title": "Siyuan Note",
      "properties": {
        "siyuan.instances": {
          "type": "array",
          "description": "Siyuan Note instances configuration",
          "items": {
            "type": "object",
            "required": ["id", "name", "url", "token"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique instance identifier"
              },
              "name": {
                "type": "string",
                "description": "Display name for the instance"
              },
              "url": {
                "type": "string",
                "description": "Siyuan API URL (e.g., http://localhost:6806)"
              },
              "token": {
                "type": "string",
                "description": "API token for authentication"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether this instance is enabled"
              }
            }
          },
          "default": []
        }
      }
    },
    "languages": [
      {
        "id": "kramdown",
        "aliases": ["Kramdown", "kramdown"],
        "extensions": [".md"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "arktype": "latest"
  }
}